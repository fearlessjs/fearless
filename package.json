{
  "name": "ramdaless",
  "description": "Ramdaless MicroFramework Node",
  "version": "0.1.0",
  "author": "Rodrigo Oler <roodrigoprogrammer@gmail.com>",
  "babel": {
    "presets": [
      "@babel/env",
      "minify"
    ],
    "comments": true
  },
  "dependencies": {
    "fast-json-stringify": "1.11.3",
    "ramda": "0.26.1",
    "simdjson": "0.0.3",
    "uWebSockets.js": "uNetworking/uWebSockets.js#v15.5.0"
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.3.4",
    "@babel/node": "7.2.2",
    "@babel/preset-env": "7.3.4",
    "babel-preset-minify": "0.5.0",
    "eslint": "5.15.1",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "express": "4.16.4",
    "fastify": "2.0.1",
    "hapi": "18.1.0",
    "husky": "1.3.1",
    "koa": "2.7.0",
    "lint-staged": "8.1.5",
    "micro": "9.3.3"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true
    },
    "extends": "standard",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {}
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "yarn standard",
      "git add"
    ]
  },
  "main": "dist/index.js",
  "private": false,
  "repository": "git@github.com:rodrigooler/ramdaless.git",
  "scripts": {
    "bench:express:1": "yarn start:express && wrk -t12 -c400 -d60s http://0.0.0.0:3000 > express.md",
    "bench:fastify:1": "start:fastify && wrk -t12 -c400 -d60s http://0.0.0.0:3000 > express.md",
    "bench:hapi:1": "start:hapi && wrk -t12 -c400 -d60s http://0.0.0.0:3000 > express.md",
    "bench:koa2:1": "start:koa2 && wrk -t12 -c400 -d60s http://0.0.0.0:3000 > express.md",
    "bench:micro:1": "start:micro && wrk -t12 -c400 -d60s http://0.0.0.0:3000 > express.md",
    "build": "babel src -d dist",
    "clean": "rm -rf dist",
    "standard": "standard --fix",
    "start:express": "node ./benchmarks/express",
    "start:fastify": "node ./benchmarks/express",
    "start:hapi": "node ./benchmarks/express",
    "start:koa2": "node ./benchmarks/express",
    "start:micro": "node ./benchmarks/express"
  }
}
