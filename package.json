{
  "name": "@fearless/fearless",
  "description": "⚡️Small and Scary microframework",
  "version": "0.1.1",
  "author": "Rodrigo Oler <https://github.com/rodrigooler>",
  "bugs": {
    "url": "https://github.com/fearlessjs/fearless/issues"
  },
  "dependencies": {
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v15.11.0"
  },
  "devDependencies": {
    "@fearless/cors": "0.1.4",
    "@fearless/json": "0.1.0",
    "@fearless/listen": "0.1.0",
    "docusaurus": "1.11.1",
    "express": "4.17.1",
    "fastify": "2.6.0",
    "hapi": "18.1.0",
    "husky": "3.0.0",
    "koa": "2.7.0",
    "lint-staged": "9.1.0",
    "micro": "9.3.4",
    "prettier": "1.18.2",
    "ramda": "0.26.1",
    "restify": "8.3.3",
    "uglify-js": "3.6.0"
  },
  "homepage": "https://github.com/fearlessjs/fearless#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "agile",
    "fast",
    "fearless",
    "framework",
    "javascript",
    "micro",
    "microframework",
    "node",
    "performance"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "lib/index.js",
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": true,
    "printWidth": 80,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/fearlessjs/fearless.git"
  },
  "scripts": {
    "build": "cat ./lib/* | ./node_modules/.bin/uglifyjs --compress --mangle -o fearless.js",
    "clear": "rm -rf yarn.lock node_modules && yarn",
    "docusaurus:build": "docusaurus-build",
    "docusaurus:examples": "docusaurus-examples",
    "docusaurus:publish-gh-pages": "docusaurus-publish",
    "docusaurus:rename-version": "docusaurus-rename-version",
    "docusaurus:start": "docusaurus-start",
    "docusaurus:version": "docusaurus-version",
    "docusaurus:write-translations": "docusaurus-write-translations",
    "example:one": "node examples/post.js",
    "lines": "npx cloc lib/",
    "prettier": "prettier --write '{.,__tests__,./**, ./src/**}/*.js'",
    "watch": "tsc -w"
  }
}
